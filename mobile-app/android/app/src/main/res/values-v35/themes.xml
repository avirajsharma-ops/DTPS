<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 15 (API 35) specific theme overrides -->
    <!-- Opt-out of enforced edge-to-edge for backward compatibility -->
    
    <style name="Theme.DTPS" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Explicitly opt-out of edge-to-edge on Android 15 -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="Theme.DTPS.Splash" parent="Theme.DTPS">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
